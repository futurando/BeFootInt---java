<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">


    <context:property-placeholder location="classpath:spring/social/twitter.properties"/>
    
	<bean id="tweetConnector" class="be.befootint.consulttweets.social.twitter.TweetConnector">
		<constructor-arg value="${consumerKey}" />
		<constructor-arg value="${consumerSecret}" />
		<constructor-arg value="${accessToken}" />
		<constructor-arg value="${accessTokenSecret}" />
	</bean>
</beans>